CREATE TABLE ENDERECO (ID  SERIAL NOT NULL, BAIRRO VARCHAR(30) NOT NULL, NUMERO INTEGER NOT NULL, RUA VARCHAR(50) NOT NULL, COMPLEMENTO VARCHAR(40), PRIMARY KEY (ID))
