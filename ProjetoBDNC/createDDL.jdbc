CREATE TABLE EQUIPAMENTO (ID  SERIAL NOT NULL, DATADAINCLUSAO TIMESTAMP, NUMERODEVENDAS INTEGER, PRECO FLOAT, NOME VARCHAR(50), DESCRICAO VARCHAR(255), CATEGORIA_ID INTEGER, MARCA_ID INTEGER, PRIMARY KEY (ID))
CREATE TABLE CATEGORIA (ID  SERIAL NOT NULL, NOME VARCHAR(50) UNIQUE, PRIMARY KEY (ID))
